<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeckMenuFragment">

    <Button
        android:id="@+id/button_menu_new_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorGreenDark"
        android:textSize="50sp"
        android:text="New Deck" />

    <Button
        android:id="@+id/button_menu_seed_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorYellowDark"
        android:textSize="50sp"
        android:text="Seed Deck" />

</LinearLayout>